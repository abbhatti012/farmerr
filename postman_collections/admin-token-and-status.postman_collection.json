{
  "info": {
    "_postman_id": "a1b2c3d4-5678-90ab-cdef-1234567890ab",
    "name": "Admin API - Login + Update Financial Status",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Login to receive a Bearer token, then update order financial status using that token."
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost"
    },
    {
      "key": "admin_email",
      "value": "admin@example.com"
    },
    {
      "key": "admin_password",
      "value": "password"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "order_id",
      "value": "123"
    }
  ],
  "item": [
    {
      "name": "1 - Admin Login (get token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{admin_email}}\",\n  \"password\": \"{{admin_password}}\",\n  \"device_name\": \"Postman\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/admin/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "login"
          ]
        }
      },
      "response": []
    },
    {
      "name": "2 - Update Order Financial Status",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"financial_status\": \"paid\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/admin/orders/{{order_id}}/financial-status",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "orders",
            "{{order_id}}",
            "financial-status"
          ]
        }
      },
      "response": []
    }
  ]
}
